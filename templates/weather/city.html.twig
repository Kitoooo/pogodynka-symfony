{% extends 'base.html.twig' %}

{# var location \App\Enity\Location #}
{# var forcast \App\Entity\Forcast #}

{% block title %}Weather in {{ location.city }}, {{ location.country }}{% endblock %}

{% block body %}
    <main>
        <h1>Weather in {{ location.city }}, {{ location.country }}</h1>

        <ul>
            {% for forcast in forcasts %}
                <li>{{ forcast.date|date('d.m.Y') }}: {{ forcast.temperature }}&deg;C</li>
            {% endfor %}
        </ul>
    </main>
{% endblock %}